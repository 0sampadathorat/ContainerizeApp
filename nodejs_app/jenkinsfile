def clustername = params.cluster
def port = params.port
def tag = params.tag

pipeline {
    agent any
    environment {
        CLUSTER_NAME = "${clustername}"
        PORT = "${port}"
        TAG = "${tag}"
    }

    stages {
        stage('Build') {
            steps {
                sh '''
                    echo "Cluster Name: $CLUSTER_NAME"
                    echo "Port: $PORT"
                    pwd
                '''
            }
        }
    }
}
