def clustername = params.cluster ?: 'default-cluster'
def port = params.port ?: '8080'

pipeline {
    agent any
    environment {
        CLUSTER_NAME = "${clustername}"
        PORT = "${port}"
        
    }

    stages {
        stage('Build') {
            steps {
                sh '''
                    echo "Cluster Name: $CLUSTER_NAME"
                    echo "Port: $PORT"
                    pwd
                '''
            }
        }
    }
}
