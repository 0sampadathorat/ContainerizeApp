pipeline {
    agent any
    environment {
        CLUSTER_NAME = "${params.ClusterName}"
        PORT = "${params.Port}"
    }
    stages {
        stage('Push to Docker Registry') {
            steps {
                withDockerRegistry(credentialsId: 'dockerhub', url: 'https://hub.docker.com/repository/docker/sampubeta/nodejs-app/general') {
                    // All steps inside this block will be executed with the specified Docker credentials.
                    sh 'docker build -t sampubeta/nodejs-app .'
                    sh 'docker push sampubeta/nodejs-app'
                }
             }
         }
     }
}
